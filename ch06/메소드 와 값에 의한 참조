using System;
using System.Security.Cryptography.X509Certificates;

namespace ConsoleApp1
{
    class MainApp
    {
        //피보나치 수열 메소드 
        //이렇게 하는걸 재귀 호출 이라고 함 성능에 안좋으니 주의해서 사용 
        static int Fibonacci(int n)
        {
            if (n < 2)
            {
                return n;
            }
            else
            {
                return Fibonacci(n - 1) + Fibonacci(n - 2);
            }
        }
        static void Swap(int x, int y) {
            int temp = x;
            x = y;
            y = temp;
        }

        static void realSwap(ref int x, ref int y)
        { //매게 변수를 받을 때 ref 키워드를 사용 
            int temp = x;
            x = y;
            y = temp;
        }
        //참조로 반환 메소드
        
        static void Main(string[] args)
        {
            Console.WriteLine($"10번째 피보나치 수 : {Fibonacci(10)}");
            int a = 3, b = 5;
            Console.WriteLine($"Before Swap: a = {a}, b = {b}"); // 스왑 전 값 출력
            Swap(a, b);
            Console.WriteLine($"After Swap: a = {a}, b = {b}"); // 스왑 후 값 출력 a,b 값이 바뀌지 않음 값에 의한 전달이기 때문
            
            realSwap(ref a, ref b); //ref 키워드를 사용하여 참조에 의한 전달 
            Console.WriteLine($"이번에는 진짜 바뀜 a = {a}, b = {b}"); // 스왑 ref 키워드로 참조에 의한 전달이기 때문


        }
    }
}
